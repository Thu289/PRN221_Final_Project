@page
@model ManageBookStore.Pages.Admin.AddImportModel
@{
}
<style>
    .bordered-table {
        border-collapse: collapse;
    }

        .bordered-table th,
        .bordered-table td {
            border: 1px solid black;
            padding: 8px;
        }
</style>
<div class="text-center">
    @Html.Partial("AdminLayout")


    <div style="width=60%; float:left">
        <a href="addBook">Add new Book</a>
            <form method="post">
                <div>
                    <label>Supplier</label>
                    <select name="supplier">
                    @foreach(var s in Model.ListSupplier)
                    {
                         <option value="@s.Id">@s.UserName</option>
                    }
                    </select>
                <button type="submit">Create import</button>
                </div>
            <table class="bordered-table">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Image</th>
                        <th>Book Title</th>
                        <th>Book Description</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Is in stock</th>
                        <th>Categories</th>
                        <th>Rating</th>
                        <th>Supplier</th>
                        <th>Book detail</th>
                        <th>Qty import</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var b in Model.Books)
                    {
                        <tr>
                            <td>@b.Id</td>
                            <td><img src="@b.Image" style="max-width: 100px;"></td>
                            <td>@b.Name</td>
                            <td>@b.Description</td>
                            <td>@b.Price</td>
                            <td>@b.Quantity</td>
                            <td>@((bool)b.IsInStock ? "In stock" : "Out of stock")</td>
                            <td>
                                @if (b.Categories != null)
                                {
                                    foreach (var c in b.Categories)
                                    {
                                        <a href="category?catId=@c.Id">@c.Name,</a>
                                    }
                                }
                            </td>
                            <td>@b.Rating</td>
                            <td>
                                @if (b.ProductAcc != null)
                                {
                                    <a href="account?id=@b.ProductAcc.IdNavigation.Id">@b.ProductAcc.IdNavigation.FullName</a>
                                }
                            </td>
                            <td><a href="addBook?id=@b.Id">View details</a></td>
                            <td><input type="number" name="@b.Id.ToString()" /></td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
    <div>
        <h2>               </h2>
        <h1>                     </h1>
    </div>
</div>