@page
@model ManageBookStore.Pages.Admin.CategoryModel
@{
}
<style>
    .bordered-table {
        border-collapse: collapse;
    }

        .bordered-table th,
        .bordered-table td {
            border: 1px solid black;
            padding: 8px;
        }
</style>
<div>
    @Html.Partial("AdminLayout")


    <div style="width=60%; float:left">
        <a href="addCategory">Add new Category</a>

        @if (Model.Categories.Count() < 1)
        {
            <h1>There isn't any category here!</h1>
        }
        else
        {
            <table class="bordered-table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Category detail</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var b in Model.Categories)
                    {
                        <tr>
                            <td>@b.Id</td>
                            <td>@b.Name</td>
                            <td>@b.Description</td>
                            <td><a href="category?catId=@b.Id">View details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>