@page
@model ManageBookStore.Pages.Admin.ImportModel
@{
}

<style>
    .bordered-table {
        border-collapse: collapse;
    }

        .bordered-table th,
        .bordered-table td {
            border: 1px solid black;
            padding: 8px;
        }
</style>
<div>
    @Html.Partial("AdminLayout")


    <div style="width=60%; float:left">
        <a href="addImport">Add new Import</a>

        @if (Model.ListImport.Count() < 1)
        {
            <h1>There isn't no import here!</h1>
        }
        else
        {
            <table class="bordered-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Created time</th>
                        <th>Total Price</th>
                        <th>View detail</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var b in Model.ListImport)
                    {
                        <tr>
                            <td>@b.Id</td>
                            <td>@b.CreatedTime</td>
                            <td>@b.TotalPrice</td>
                            <td><a href="viewImport?id=@b.Id">View details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>